    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tg = window.Telegram.WebApp;

            // --- Configuration ---
            const CONFIG = {
                BOT_TOKEN: '8200185915:AAHF_CCg9NvYH_u9iz9XwwEe6C_BcH_qtXX', // ‚úÖ ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ API Token
                ADMIN_ID: 5371043649,
                BOT_USERNAME: 'MyCash', // ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ bot-‡¶è‡¶∞ username
                API_URL: 'https://api.telegram.org/bot',
                MONETAGE_ZONE_ID: '9459352'
            };

            // --- DOM Elements ---
            const balanceDisplay = document.getElementById('balanceDisplay'), 
                  adCountDisplay = document.getElementById('adCountDisplay'),
                  dailyAdCountDisplay = document.getElementById('dailyAdCountDisplay'), 
                  rewardedBtn = document.getElementById('rewardedBtn'),
                  mainWithdrawBtn = document.getElementById('mainWithdrawBtn'), 
                  statusMessage = document.getElementById('statusMessage'),
                  withdrawBalanceDisplay = document.getElementById('withdrawBalanceDisplay'), 
                  paymentAddressInput = document.getElementById('paymentAddress'),
                  finalWithdrawBtn = document.getElementById('finalWithdrawBtn'), 
                  referralLinkDisplay = document.getElementById('referralLink'),
                  referralCountDisplay = document.getElementById('referralCountDisplay'), 
                  referralBonusDisplay = document.getElementById('referralBonusDisplay'),
                  adminPanel = document.getElementById('adminPanel'), 
                  userInfoDisplay = document.getElementById('userInfo'),
                  adContainer = document.getElementById('adContainer'),
                  adCloseBtn = document.getElementById('adCloseBtn'),
                  adLoading = document.getElementById('adLoading'),
                  adFrame = document.getElementById('adFrame');

            // --- App Constants ---
            const WITHDRAW_THRESHOLD = 10;
            const AD_REWARD_CENTS = 1;
            const REFERRAL_BONUS_USDT = 0.5;
            const DAILY_AD_LIMIT = 1000;

            // --- App State ---
            let state = {
                balanceInCents: 0,
                totalAdCount: 0,
                dailyAdCount: 0,
                lastAdDate: null,
                referralCount: 0,
                isAdPlaying: false,
                userId: null,
                userData: null
            };

            // ---- Telegram Bot API Functions ----
            async function sendTelegramMessage(chatId, message) {
                try {
                    const response = await fetch(`${CONFIG.API_URL}${CONFIG.BOT_TOKEN}/sendMessage`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            chat_id: chatId,
                            text: message,
                            parse_mode: 'HTML'
                        })
                    });
                    
                    const data = await response.json();
                    return data.ok;
                } catch (error) {
                    console.error('Error sending Telegram message:', error);
                    return false;
                }
            }

            async function sendWithdrawalNotification(userData, amount, walletAddress) {
                const adminMessage = `
üîÑ <b>New Withdrawal Request</b>

üë§ <b>User Info:</b>
‚Ä¢ ID: ${userData.id}
‚Ä¢ Name: ${userData.first_name} ${userData.last_name || ''}
‚Ä¢ Username: @${userData.username || 'N/A'}

üí∞ <b>Withdrawal Details:</b>
‚Ä¢ Amount: ${amount} USDT
‚Ä¢ Wallet: <code>${walletAddress}</code>
‚Ä¢ Date: ${new Date().toLocaleString()}

Status: ‚è≥ Pending
                `;

                const userMessage = `
‚úÖ <b>Withdrawal Request Received</b>

Your withdrawal request for <b>${amount} USDT</b> has been received and is being processed.

üìã <b>Details:</b>
‚Ä¢ Amount: ${amount} USDT
‚Ä¢ Wallet: ${walletAddress}
‚Ä¢ Date: ${new Date().toLocaleString()}

‚è∞ <b>Processing Time:</b> 24-48 hours

We'll notify you once your withdrawal is processed.
                `;

                // Send to admin
                await sendTelegramMessage(CONFIG.ADMIN_ID, adminMessage);
                
                // Send confirmation to user
                if (state.userId) {
                    await sendTelegramMessage(state.userId, userMessage);
                }
            }

            // ---- State Management ----
            function getTodayDateString() { 
                return new Date().toISOString().split('T')[0]; 
            }
            
            function loadState() {
                try {
                    const user = tg.initDataUnsafe.user;
                    if (user && user.id) {
                        state.userId = user.id;
                        state.userData = user;
                        
                        // Load user-specific data
                        const userKey = `myCashApp_${user.id}`;
                        const savedState = JSON.parse(localStorage.getItem(userKey));
                        if (savedState) { 
                            state = { ...state, ...savedState };
                        }
                    }
                } catch (e) { 
                    console.error("Could not load state", e); 
                }
                
                if (state.lastAdDate !== getTodayDateString()) {
                    state.dailyAdCount = 0;
                    state.lastAdDate = getTodayDateString();
                    saveState();
                }
            }
            
            function saveState() {
                try {
                    if (state.userId) {
                        const userKey = `myCashApp_${state.userId}`;
                        localStorage.setItem(userKey, JSON.stringify(state));
                    }
                } catch (e) { 
                    console.error("Could not save state", e); 
                }
            }
            
            // ---- UI Updates & View Management ----
            function updateUI() {
                const balanceInUSDT = (state.balanceInCents / 100).toFixed(2);
                
                balanceDisplay.textContent = `USDT ${balanceInUSDT}`;
                adCountDisplay.textContent = state.totalAdCount;
                dailyAdCountDisplay.textContent = `${state.dailyAdCount} / ${DAILY_AD_LIMIT}`;
                withdrawBalanceDisplay.textContent = `USDT ${balanceInUSDT}`;
                
                referralCountDisplay.textContent = state.referralCount;
                const referralBonus = (state.referralCount * REFERRAL_BONUS_USDT).toFixed(2);
                referralBonusDisplay.textContent = `USDT ${referralBonus}`;

                const isWithdrawalPossible = parseFloat(balanceInUSDT) >= WITHDRAW_THRESHOLD;
                mainWithdrawBtn.disabled = !isWithdrawalPossible;
                mainWithdrawBtn.textContent = isWithdrawalPossible ? 'Go to Withdraw' : `Reach ${WITHDRAW_THRESHOLD.toFixed(2)} USDT to Withdraw`;
                
                finalWithdrawBtn.disabled = !isWithdrawalPossible;
                finalWithdrawBtn.textContent = isWithdrawalPossible ? `Withdraw ${balanceInUSDT} USDT` : `Minimum ${WITHDRAW_THRESHOLD.toFixed(2)} USDT required`;
                
                const adLimitReached = state.dailyAdCount >= DAILY_AD_LIMIT;
                rewardedBtn.disabled = adLimitReached || state.isAdPlaying;
                rewardedBtn.textContent = adLimitReached ? 'Daily Limit Reached' : 
                                         state.isAdPlaying ? 'Ad Loading...' : 'Watch Ad (+0.01 USDT)';
            }
            
            function showView(viewId) {
                document.querySelectorAll('.view').forEach(v => v.style.display = 'none');
                document.getElementById(viewId).style.display = 'block';
                document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
                const activeNavId = { 
                    'home-view': 'navHome', 
                    'withdraw-view': 'navWithdraw', 
                    'referral-view': 'navRefer' 
                }[viewId];
                if(activeNavId) document.getElementById(activeNavId).classList.add('active');
            }

            let statusTimeout;
            function showStatus(message, type, duration = 4000) {
                clearTimeout(statusTimeout);
                statusMessage.textContent = message;
                statusMessage.className = `status-message ${type}`;
                statusTimeout = setTimeout(() => { 
                    statusMessage.style.display = 'none'; 
                }, duration);
            }

            // ---- Monetage Ad Handling ----
            function handleAdSuccess() {
                state.totalAdCount++;
                state.dailyAdCount++;
                state.lastAdDate = getTodayDateString();
                state.balanceInCents += AD_REWARD_CENTS;
                state.isAdPlaying = false;
                
                showStatus(`Success! +${(AD_REWARD_CENTS / 100).toFixed(2)} USDT has been added.`, 'success');
                saveState();
                updateUI();
                closeAdContainer();
                
                // Send notification to admin
                if (state.userData) {
                    const adMessage = `
üì± <b>New Ad Watched</b>

üë§ User: ${state.userData.first_name} (@${state.userData.username || 'N/A'})
üí∞ Earned: 0.01 USDT
üìä Total Ads: ${state.totalAdCount}
üíµ Balance: ${(state.balanceInCents / 100).toFixed(2)} USDT
                    `;
                    sendTelegramMessage(CONFIG.ADMIN_ID, adMessage);
                }
            }

            function handleAdError(error) {
                console.error('Monetage Ad Error:', error);
                state.isAdPlaying = false;
                showStatus('Failed to load ad. Please try again.', 'error');
                closeAdContainer();
                updateUI();
            }

            function showAdContainer() {
                adContainer.style.display = 'flex';
                adLoading.style.display = 'block';
                adFrame.style.display = 'none';
                state.isAdPlaying = true;
                updateUI();
            }

            function closeAdContainer() {
                adContainer.style.display = 'none';
                state.isAdPlaying = false;
                updateUI();
            }

            // ---- Monetage Ad Integration ----
            function requestAd() {
                if (state.dailyAdCount >= DAILY_AD_LIMIT) {
                    showStatus("You've reached the daily ad limit.", 'error');
                    return;
                }
                
                if (state.isAdPlaying) {
                    showStatus('Please wait, ad is already loading...', 'info');
                    return;
                }

                showStatus('Loading ad, please wait...', 'info');
                showAdContainer();

                try {
                    setTimeout(() => {
                        if (typeof show_9459352 === 'function') {
                            show_9459352();
                            
                            setTimeout(() => {
                                adLoading.style.display = 'none';
                                adFrame.style.display = 'block';
                                showStatus('Ad loaded successfully! Please watch the ad to earn rewards.', 'info');
                            }, 2000);
                            
                            setTimeout(() => {
                                handleAdSuccess();
                            }, 15000);
                            
                        } else {
                            throw new Error('Monetage SDK not loaded properly');
                        }
                    }, 1000);
                    
                } catch (error) {
                    handleAdError(error);
                }
            }

            // ---- App Logic ----
            async function handleWithdrawal() {
                const balanceInUSDT = (state.balanceInCents / 100).toFixed(2);
                const walletAddress = paymentAddressInput.value.trim();

                if (parseFloat(balanceInUSDT) < WITHDRAW_THRESHOLD) {
                    showStatus(`You need at least ${WITHDRAW_THRESHOLD.toFixed(2)} USDT to withdraw.`, 'error');
                    return;
                }
                
                if (!walletAddress.startsWith('T') || walletAddress.length < 34) {
                    showStatus('Please enter a valid USDT (TRC20) wallet address.', 'error');
                    return;
                }
                
                // Send withdrawal notification via Telegram Bot API
                await sendWithdrawalNotification(state.userData, balanceInUSDT, walletAddress);
                
                showStatus('Your withdrawal request has been sent for review.', 'success');
                
                state.balanceInCents = 0;
                saveState();
                updateUI();
                paymentAddressInput.value = '';
                showView('home-view');
            }
            
            function generateReferralLink() {
                if (state.userId) {
                    const referralLink = `https://t.me/${CONFIG.BOT_USERNAME}?start=ref_${state.userId}`;
                    referralLinkDisplay.textContent = referralLink;
                    
                    referralLinkDisplay.addEventListener('click', function() {
                        navigator.clipboard.writeText(referralLink).then(() => {
                            showStatus('Referral link copied to clipboard!', 'success');
                        }).catch(() => {
                            const textArea = document.createElement('textarea');
                            textArea.value = referralLink;
                            document.body.appendChild(textArea);
                            textArea.select();
                            document.execCommand('copy');
                            document.body.removeChild(textArea);
                            showStatus('Referral link copied!', 'success');
                        });
                    });
                } else {
                    referralLinkDisplay.textContent = 'User data not available';
                }
            }

            function checkAdmin() {
                if (state.userId == CONFIG.ADMIN_ID) {
                    adminPanel.style.display = 'block';
                    userInfoDisplay.textContent = `User ID: ${state.userId} | Admin Access`;
                    
                    const adminControls = document.createElement('div');
                    adminControls.innerHTML = `
                        <button onclick="resetAllData()" style="background: var(--danger-color); margin: 5px; padding: 8px 12px; border: none; border-radius: 5px; color: white; cursor: pointer;">Reset All Data</button>
                        <button onclick="addBalance()" style="background: var(--success-color); margin: 5px; padding: 8px 12px; border: none; border-radius: 5px; color: white; cursor: pointer;">Add 10 USDT</button>
                    `;
                    adminPanel.appendChild(adminControls);
                }
            }

            // ---- Event Listeners ----
            rewardedBtn.addEventListener('click', requestAd);
            mainWithdrawBtn.addEventListener('click', () => showView('withdraw-view'));
            finalWithdrawBtn.addEventListener('click', handleWithdrawal);
            adCloseBtn.addEventListener('click', closeAdContainer);
            
            document.getElementById('navHome').addEventListener('click', () => showView('home-view'));
            document.getElementById('navWithdraw').addEventListener('click', () => showView('withdraw-view'));
            document.getElementById('navRefer').addEventListener('click', () => showView('referral-view'));

            adContainer.addEventListener('click', function(e) {
                if (e.target === adContainer) {
                    closeAdContainer();
                }
            });

            // ---- Initialize App ----
            tg.ready();
            tg.expand();
            
            loadState();
            updateUI();
            generateReferralLink();
            checkAdmin();

            // ---- Admin Functions ----
            window.resetAllData = function() {
                state.balanceInCents = 0;
                state.totalAdCount = 0;
                state.dailyAdCount = 0;
                state.referralCount = 0;
                saveState();
                updateUI();
                showStatus('All data reset successfully!', 'success');
            };

            window.addBalance = function() {
                state.balanceInCents += 1000; // 10 USDT
                saveState();
                updateUI();
                showStatus('10 USDT added to balance!', 'success');
            };

            // Monetage Global Callbacks
            window.adCompleted = function() {
                handleAdSuccess();
            };

            window.adFailed = function() {
                handleAdError('Ad failed to load');
            };

            // API Token verification
            console.log('‚úÖ MyCash Bot API Token Configured Successfully!');
            showStatus('‚úÖ Bot connected successfully!', 'success', 3000);
        });
    </script>
